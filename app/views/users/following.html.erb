<div class='container px-5 px-sm-0'>
  <div class='row'>
    <table class='table'>
      <h2>Follow Users</h2>

      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @users.each do |user| %>
        <tr> 
          <!-- フォローしてるユーザーのイメージ -->
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>

          <!-- フォローしてるユーザーの名前 -->
          <th><%= user.name %></th>

          <!-- フォローしてるユーザーのフォロー数 -->
          <th>フォロー数: <%= user.following.count %></th>

          <!-- フォローしてるユーザーのフォロワー数 -->
          <th>フォロワー数: <%= user.followers.count %></th>

          <!-- フォローしてるユーザーのshowページ -->
          <th><%= link_to "Show", user_path(user) %> </th>
        </tr>
      <% end %>

    </table>
  </div>
</div>
