<div class='container px-5 px-sm-0'>
  <div class='row'>
    <table class='table'>
      <h2>Follower Users</h2>
      <tr>
        <th>image</th>
        <th>name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

      <% @users.each do |user| %>
        <tr> 
          <!-- フォローされてるユーザーのイメージ -->
          <td><%= image_tag user.get_profile_image, size: '50x50' %></td>

          <!-- フォローされてるユーザーの名前 -->
          <th><%= user.name %></th>

          <!-- フォローされてるユーザーのフォロー数 -->
          <th>フォロー数: <%= user.following.count %></th>

          <!-- フォローされてるユーザーのフォロワー数 -->
          <th>フォロワー数: <%= user.followers.count %></th>

          <!-- フォローされてるユーザーのshowページ -->
          <th><%= link_to "Show", user_path(user) %> </th>
        </tr>
      <% end %>

    </table>
  </div>
</div>


