<div class="container">
  <div class="col-xs-12">
    <% if @model == "user" %>
      <h2>Users search for "<%= @word %>"</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Name</th>
                    <th>Introduction</th>
                </tr>
            </thead>
        <% @records.each do |user| %>
            <tbody>
                <tr>
                    <th>
                        <%= image_tag user.get_profile_image, size: '50x50' %>
                    </th>
                    <th>
                        <%= link_to "#{user.name}", user_path(user) %>
                    </th>
                    <th>
                        <%= user.introduction %>
                    </th>
                </tr>
            </tbody>
        <% end %>
    <% elsif @model == "book" %>
        <h2>Books search for "<%= @word %>"</h2>
        <table class="table">
            <thead>
                <tr>
                    <th></th>
                    <th>Title</th>
                    <th>Opinion</th>
                </tr>
            </thead>
            <% @records.each do |book| %>
            <tbody>
                <tr>
                    <th>
                        <%= image_tag book.user.get_profile_image, size: '50x50' %>
                    </th>
                    <th>
                        <%= link_to "#{book.title}", book_path(book) %>
                    </th>
                    <th>
                        <%= book.body %>
                    </th>
                </tr>
            </tbody>
        <% end %>
    <% end %>
    </table>
  </div>
</div>
